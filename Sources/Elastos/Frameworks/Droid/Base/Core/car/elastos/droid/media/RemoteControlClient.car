         *      {@link #FLAG_KEY_MEDIA_PREVIOUS},
         *      {@link #FLAG_KEY_MEDIA_REWIND},
         *      {@link #FLAG_KEY_MEDIA_PLAY},
         *      {@link #FLAG_KEY_MEDIA_PLAY_PAUSE},
         *      {@link #FLAG_KEY_MEDIA_PAUSE},
         *      {@link #FLAG_KEY_MEDIA_STOP},
