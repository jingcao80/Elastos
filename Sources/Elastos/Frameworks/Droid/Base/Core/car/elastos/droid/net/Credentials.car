module
{
    namespace Elastos {
    namespace Droid {
    namespace Net {

    /**
     * A class for representing UNIX credentials passed via ancillary data
     * on UNIX domain sockets. See "man 7 unix" on a desktop linux distro.
     */
    interface ICredentials {
        GetPid(
            [out] Int32* pid);

        GetUid(
            [out] Int32* uid);

        GetGid(
            [out] Int32* gid);
    }

    } // namespace Net
    } // namespace Droid
    } // namespace Elastos
}
