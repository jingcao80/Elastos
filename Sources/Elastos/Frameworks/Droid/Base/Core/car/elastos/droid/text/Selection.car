
module
{
    using interface Elastos.Core.ICharSequence;

    interface Elastos.Droid.Text.ISpannable;
    interface Elastos.Droid.Text.ILayout;

    namespace Elastos {
    namespace Droid {
    namespace Text {

    /** {@hide} */
    interface ISelectionPositionIterator {
        const Int32 DONE = -1;//BreakIterator_DONE;

        Preceding(
            [in] Int32 position,
